	option proto 'udp'
	option dest_port '16962'
	option target 'ACCEPT'
	option enabled '1'
	option family 'ipv6'

config rule 'Allow_mavlink_router'
	option name 'Allow MAVLink Router'
	option src 'wan'
	option proto 'udp'
	option dest_port '24550'
	option target 'ACCEPT'
	option enabled '0'

config rule 'Allow_Dynamic_Mesh_UDP'
	option enabled '1'
	option target 'ACCEPT'
	option src 'wan'
	option proto 'udp'
	option dest_port '22359'
	option name 'Dynamic_Mesh UDP Port'

config rule 'Allow_Dynamic_Mesh_BLA'
	option enabled '1'
	option target 'ACCEPT'
	option src 'wan'
	option proto 'udp'
	option dest_port '22338'
	option name 'Dynamic_Mesh Bridged Loop Avoidance Port'
	option family 'ipv6'

config rule 'Allow_ipadvertiser'
	option name 'Allow-ipadvertiser'
	option src 'wan'
	option proto 'udp'
	option dest_port '11111'
	option target 'ACCEPT'
	option enabled '1'

config rule 'Allow_gpsd'
