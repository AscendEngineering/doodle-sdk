
config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fdad:6430:8b92::/48'

config interface 'mesh_dev'
	option proto 'batadv_hardif'
	option master 'bat0'
	option mtu '1532'

config interface 'wan'
	option type 'bridge'
	option proto 'dhcp'
	option ifname 'eth0 bat0 usb0 eth1'
	option igmp_snooping '1'
	option multicast_querier '1'
	option robustness '9'
	option query_interval '2000'
	option query_response_interval '500'

config interface 'wan2'
	option ifname 'br-wan'
	option proto 'static'
	option ipaddr '10.223.166.69'
	option netmask '255.255.0.0'

config interface 'wan3'
	option ifname 'br-wan'
	option proto 'static'
	option ipaddr '192.168.153.1'
	option netmask '255.255.255.0'

config interface 'bat0'
	option ifname 'bat0'
	option proto 'batadv'
	option aggregated_ogms '1'
	option ap_isolation '0'
	option bonding '0'
	option gw_bandwidth '10000/2000'
	option gw_mode 'off'
	option gw_sel_class '20'
	option orig_interval '1000'
	option distributed_arp_table '0'
	option multicast_mode '1'
	option multicast_to_unicast '0'
	option routing_algo 'BATMAN_IV'
	option hop_penalty '30'
	option isolation_mark '0x00000000/0x00000000'
	option fragmentation '1'
	option fast_rerouting '1'
	option bridge_loop_avoidance '0'

